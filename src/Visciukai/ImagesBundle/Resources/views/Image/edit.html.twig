{% extends 'VisciukaiImagesBundle:Image:layout.html.twig' %}
{% block navbar_entries %}
    <li><a href="{{ path('images', {'albumId' : entity.album.id}) }}">Albumas {{ entity.album.title }}</a></li>
    <li class="active"><a href="/">Nuotraukos {{ entity.name }} redagavimas</a></li>
{% endblock %}
{% block body -%}
    <div class="container-page col-md-12">
    <br/>
    <div class="container">
            <div class="col-md-4"></div>
            {{ form_start(form) }}
            <div class="col-md-4 well image-form">
                <b>Atnaujinti paveiksliukÄ…</b>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group col-lg-12">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group col-lg-12">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group col-lg-12">
                    {{ form_label(form.album) }}
                    {{ form_widget(form.album, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.album) }}
                </div>

                {{ form_rest(form) }}
                <div class="col-md-6">
                    <input type="submit" class="btn btn-primary"  value="Atnaujinti" />
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-4"></div>


        </div>
    </div>

{% endblock %}
